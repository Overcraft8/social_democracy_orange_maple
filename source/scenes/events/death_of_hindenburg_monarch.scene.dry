    } else {
        Q.nsdap_candidate = "Seldte";
    }
} else if (Q.Goring_votes && Q.Seldte_votes) {
    if (Q.Goring_votes > Q.Seldte_votes) {
        Q.scp_candidate = "Göring";
        Q.other_candidate = "Göring";
    } else {
        Q.nsdap_candidate = "Seldte";
    }
}
// 2. If Adenauer & Gessler are both running and neither are part of the CCF coalition, the smaller of these drops out.
Q.adenauer_drops_out = 0;
Q.gessler_drops_out = 0;
if (Q.rpc_candidate == "Adenauer" && (Q.lpc_candidate == "Gessler" || Q.cpc_candidate == "Gessler") && Q.rpc_candidate != Q.ccf_candidate && (Q.lpc_candidate != Q.ccf_candidate || Q.cpc_candidate != Q.ccf_candidate)) {
    if (Q.Adenauer_votes > Q.Gessler_votes) {
        Q.gessler_drops_out = 1;
        if (Q.lpc_candidate != Q.ccf_candidate) {
            Q.lpc_candidate = "Adenauer";
        }
        if (Q.cpc_candidate != Q.ccf_candidate) {
            Q.cpc_candidate = "Adenauer";
        }
        Q.Adenauer_bonus = (Q.Adenauer_bonus || 0) + 0.25*Q.other_votes;
    } else {
        Q.adenauer_drops_out = 1;
        Q.rpc_candidate = "Gessler";
        Q.Gessler_bonus = 0.25*Q.other_votes;
    }
    if (Q.nsdap_candidate == 'Seldte') {
        Q.Seldte_bonus = (Q.Seldte_bonus || 0) - 0.25*Q.other_votes;
    } else if (Q.nsdap_candidate == "Hitler") {
        Q.Hitler_bonus = (Q.Hitler_bonus || 0) - 0.25*Q.other_votes;
    }
}
// CPC drops out to favor the center candidate
if (Q.cpc_candidate != Q.ccf_candidate && Q.cpc_candidate != Q.lpc_candidate && Q.cpc_candidate != Q.rpc_candidate) {
}

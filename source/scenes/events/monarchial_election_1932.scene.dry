@post_election
on-arrival: {!
Q.woodsworth_votes = 0;
Q.hindenburg_votes = 0;
Q.hitler_votes = 0;
Q.thalmann_votes = 0;

// initial phase:
Q.hitler_votes += Q.nsdap_normalized;
Q.hindenburg_votes += Q.other_normalized;
Q.hindenburg_votes += Q.scp_normalized;

if (Q.woodsworth_campaign) {
    Q.woodsworth_votes += Q.ccf_normalized;
    Q.woodsworth_votes += Q.lpc_normalized;
    if (Q.rpc_support_woodsworth && Q.rpc_support_woodsworth == 1) {
        Q.woodsworth_votes += Q.rpc_normalized;
    } else {
        Q.hindenburg_votes += Q.rpc_normalized;
    }
    if (Q.pcc_support_woodsworth) {
        Q.woodsworth_votes += Q.pcc_normalized;
        if (Q.sapd_formed && Q.sapd_votes) {
            Q.woodsworth_votes += Q.sapd_normalized;
        }
    } else {
        Q.thalmann_votes += Q.pcc_normalized;
        if (Q.sapd_formed && Q.sapd_votes) {
            Q.thalmann_votes += Q.sapd_normalized;
        }
    }
    if (Q.cpc_support_woodsworth) {
        Q.woodsworth_votes += Q.cpc_normalized;
    } else {
        Q.hindenburg_votes += Q.cpc_normalized;
    }
} else if (Q.ccf_support_thalmann) {
    Q.thalmann_votes += Q.pcc_normalized;
    Q.thalmann_votes += Q.ccf_normalized;
    Q.hindenburg_votes += Q.rpc_normalized;
    Q.hindenburg_votes += Q.lpc_normalized;
    Q.hindenburg_votes += Q.cpc_normalized;
} else {
    Q.hindenburg_votes += Q.ccf_normalized;
    Q.hindenburg_votes += Q.rpc_normalized;
    Q.hindenburg_votes += Q.lpc_normalized;
    Q.hindenburg_votes += Q.cpc_normalized;
    Q.thalmann_votes += Q.pcc_normalized;
}
if (Q.hitler_support_hindenburg) {
    Q.hitler_votes -= Q.nsdap_normalized;
    Q.hindenburg_votes += Q.nsdap_normalized;
}

if (Q.hindenburg_to_woodsworth_bonus) {
    Q.hindenburg_votes -= Q.hindenburg_to_woodsworth_bonus;
    Q.woodsworth_votes += Q.hindenburg_to_woodsworth_bonus;
}
if (Q.thalmann_to_woodsworth_bonus) {
    Q.thalmann_votes -= Q.thalmann_to_woodsworth_bonus;
    Q.woodsworth_votes += Q.thalmann_to_woodsworth_bonus;
}

// check for majority
Q.hindenburg_votes = Math.round(Q.hindenburg_votes*1000)/10;
Q.woodsworth_votes = Math.round(Q.woodsworth_votes*1000)/10;
Q.hitler_votes = Math.round(Q.hitler_votes*1000)/10;
Q.thalmann_votes = Math.round(Q.thalmann_votes*1000)/10;

Q.hindenburg_majority = (Q.hindenburg_votes >= 50);
Q.thalmann_majority = (Q.thalmann_votes >= 50);
Q.hitler_majority = (Q.hitler_votes >= 50);
Q.woodsworth_majority = (Q.woodsworth_votes >= 50);
Q.any_majority = Q.hindenburg_majority | Q.thalmann_majority | Q.hitler_majority | Q.woodsworth_majority;

// check for plurality
Q.hindenburg_plurality = (Q.hindenburg_votes >= Q.hitler_votes && Q.hindenburg_votes >= Q.woodsworth_votes && Q.hindenburg_votes >= Q.thalmann_votes);
Q.thalmann_plurality = (Q.thalmann_votes >= Q.hindenburg_votes && Q.thalmann_votes >= Q.woodsworth_votes && Q.thalmann_votes >= Q.hitler_votes);
Q.hitler_plurality = (Q.hitler_votes >= Q.hindenburg_votes && Q.hitler_votes >= Q.woodsworth_votes && Q.hitler_votes >= Q.thalmann_votes);
Q.woodsworth_plurality = (Q.woodsworth_votes >= Q.hindenburg_votes && Q.woodsworth_votes >= Q.hitler_votes && Q.woodsworth_votes >= Q.thalmann_votes);
// If no candidate gets above 50%, then there's a second round. In the second round, a plurality wins. 
Q.election_round += 1;

// making the vote numbers nicer for the display
Q.hindenburg_votes_disp = Q.hindenburg_votes.toFixed(1);
Q.woodsworth_votes_disp = Q.woodsworth_votes.toFixed(1);
Q.hitler_votes_disp = Q.hitler_votes.toFixed(1);
Q.thalmann_votes_disp = Q.thalmann_votes.toFixed(1);
!}
